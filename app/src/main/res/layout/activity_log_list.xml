<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LogList"
    android:background="@drawable/log_list_background_gray_triangular_flame">

    <ImageButton
        android:layout_width="@dimen/life_goal_icon"
        android:layout_height="@dimen/life_goal_icon"
        android:id="@+id/BoxOne"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/life_goal_1"
        android:layout_toLeftOf="@+id/BoxTwo"
        android:layout_toStartOf="@+id/BoxTwo"
        android:onClick="onBoxOneClick"
        android:background="@drawable/spirituality_icon_gray"/>

    <ImageButton
        android:layout_width="@dimen/life_goal_icon"
        android:layout_height="@dimen/life_goal_icon"
        android:id="@+id/BoxTwo"
        android:contentDescription="@string/life_goal_1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/work_icon_gray"/>

    <ImageButton
        android:layout_width="@dimen/life_goal_icon"
        android:layout_height="@dimen/life_goal_icon"
        android:id="@+id/BoxThree"
        android:contentDescription="@string/life_goal_1"
        android:layout_alignTop="@+id/BoxTwo"
        android:layout_toEndOf="@+id/BoxTwo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/wellbeing_icon_gray"/>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/BoxThree"
        android:layout_toStartOf="@+id/BoxThree"
        android:id="@+id/RelativeLayout1">

        <ImageButton
            android:layout_width="@dimen/log_task_button"
            android:layout_height="@dimen/log_task_button"
            android:id="@+id/CircleTwo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/log_task_button2"
            android:background="@drawable/log_task_button_gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toStartOf="@+id/BoxTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/RelativeLayout1"
        android:layout_toLeftOf="@+id/BoxTwo"
        android:id="@+id/RelativeLayout2"
        android:layout_below="@+id/BoxOne">

        <ImageButton
            android:layout_width="@dimen/log_task_button"
            android:layout_height="@dimen/log_task_button"
            android:id="@+id/CircleOne"
            android:contentDescription="@string/log_task_button2"
            android:visibility="visible"
            android:background="@drawable/log_task_button_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/RelativeLayout2"
        android:layout_toRightOf="@+id/RelativeLayout1"
        android:layout_toEndOf="@+id/RelativeLayout1"
        android:layout_below="@+id/BoxThree"
        android:id="@+id/RelativeLayout3">

        <ImageButton
            android:layout_width="@dimen/log_task_button"
            android:layout_height="@dimen/log_task_button"
            android:id="@+id/CircleThree"
            android:contentDescription="@string/log_task_button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="false"
            android:background="@drawable/log_task_button_gray" />
    </RelativeLayout>

</RelativeLayout>
